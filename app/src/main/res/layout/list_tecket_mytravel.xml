<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgroundshape"
        android:layout_marginTop="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginTop="6dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/driver"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="6dp"
                android:layout_gravity="bottom"
                android:layout_weight="1" />

            <TextView
                android:text="Bassem Abduallah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtTicketCustomerName"
                android:textColor="@android:color/background_light"
                android:layout_gravity="bottom|left"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textStyle="normal|bold" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:text="sdfsdf sdf ds fs df sdf sdf sd fsd fsd f dsf sdf sdf ds fsd fsd f sdfhsdjfh  ds sd fsdf sdf s fds @android:string/fingerprint_icon_content_desdsfcription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtTicketCustomerLocation"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="3dp"
                android:textColor="@android:color/background_light"
                android:layout_weight="1"
                android:layout_marginRight="3dp" />

            <TextView
                android:text=" sdfkj ds fsd fsdkfs fsd fsldf sdlkf sld fsdl flds f lsdf sd fsd fsdl fnsd fskdnf sdlkf sdlf sdklf sdklfn sldkf sdkf dskl fsdf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtTicketCustomerDestination"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="6dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textColor="@android:color/black"
                android:textAlignment="viewStart"
                android:layout_marginTop="3dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="8dp">

            <TextView
                android:text="14:25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtTicketTime"
                android:layout_weight="1"
                android:gravity="left"
                android:textColor="@android:color/background_light"
                android:layout_marginLeft="5dp" />

            <TextView
                android:text="25/25/2016"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtTicketDate"
                android:layout_weight="1"
                android:textColor="@android:color/background_light"
                android:layout_gravity="bottom|right"
                android:textSize="12sp"
                android:gravity="right" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>